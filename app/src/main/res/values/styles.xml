<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    <style name="Urgent_And_Important_ButtonStyle" parent="style_Button">
        <item name="android:background">@color/Teal</item>
    </style>
    <style name="Non_Urgent_And_Important" parent="style_Button">
        <item name="android:background">@color/Aqua</item>
    </style>
    <style name="Non_Important_And_Urgent" parent="style_Button">
        <item name="android:background">@color/mint_green</item>
    </style>
    <style name="Non_Important_And_Non_Urgent" parent="style_Button">
        <item name="android:background">@color/light_green</item>
    </style>
</resources>